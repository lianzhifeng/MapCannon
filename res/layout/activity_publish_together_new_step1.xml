<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:background="#fff0f0f0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/top_bar"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/bg_publish_together1"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="15.0dip">

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/icon_start_city"/>

                <EditText
                        android:textSize="16.0sp"
                        android:textColor="#ff333333"
                        android:textColorHint="#ffbfbfbf"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/et_start_city"
                        android:background="@drawable/bg_publish_comment"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:hint="出发地"
                        android:singleLine="true"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/bg_publish_together1"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="15.0dip">

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/icon_des_city"/>

                <EditText
                        android:textSize="16.0sp"
                        android:textColor="#ff333333"
                        android:textColorHint="#ffbfbfbf"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/et_des_city"
                        android:background="@drawable/bg_publish_comment"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:hint="目的地"
                        android:singleLine="true"/>
            </LinearLayout>

            <RelativeLayout
                    android:orientation="horizontal"
                    android:id="@+id/rl_round_date_tip"
                    android:background="@drawable/selector_together_shared_house"
                    android:visibility="visible"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="15.0dip">

                <ImageView
                        android:id="@+id/iv_chose_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/icon_round_date"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true"/>

                <EditText
                        android:background="@drawable/bg_publish_comment"
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:textSize="16.0sp"
                        android:textColor="#ff333333"
                        android:textColorHint="#ffbfbfbf"
                        android:id="@+id/tv_round_date"
                        android:hint="请选择出发时间"
                        android:layout_toRightOf="@id/iv_chose_date"
                        android:layout_centerVertical="true"/>
            </RelativeLayout>

            <View
                    android:background="@color/white"
                    android:visibility="visible"
                    android:layout_width="15.0dip"
                    android:layout_height="1.0dip"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textSize="16.0sp"
                        android:textColor="#ff666666"
                        android:gravity="center_vertical"
                        android:background="@color/white"
                        android:paddingLeft="15.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:text="想跟你的同伴说些什么"/>

                <RelativeLayout
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <EditText
                            android:textSize="14.0sp"
                            android:textColor="#ff333333"
                            android:textColorHint="#ff999999"
                            android:gravity="center|left|top"
                            android:id="@+id/et_remark"
                            android:background="@drawable/bg_input_edit"
                            android:padding="10.0dip"
                            android:layout_width="fill_parent"
                            android:layout_height="103.0dip"
                            android:layout_marginLeft="15.0dip"
                            android:layout_marginRight="15.0dip"
                            android:hint="我想对你说......"
                            android:inputType="textMultiLine"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>