            <TextView android:textColor="#ffff0000" android:id="@+id/code_space_text2" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/code_space" android:layout_toRightOf="@id/code_space_text1" android:layout_below="@id/update_result_code" />
            <LinearLayout android:orientation="vertical" android:id="@+id/update_process_code_layout" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_toRightOf="@id/code_space_text2" android:layout_below="@id/update_result_code">
                <TextView android:textColor="#ffff0000" android:id="@+id/update_toast_code" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/update_toast_yes" />
