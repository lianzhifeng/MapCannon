        <RelativeLayout android:id="@+id/update_return_layout" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textColor="#ff000000" android:id="@+id/update_process_text5" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/update_process_text5" />
            <TextView android:textColor="#ffff0000" android:id="@+id/update_return_code1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/update_return_code" android:layout_below="@id/update_process_text5" />
            <TextView android:textColor="#ffff0000" android:id="@+id/code_space_text1" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/code_space" android:layout_below="@id/update_return_code1" />
