                <TextView android:textColor="#ffff0000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/is_ignore_code" />
                <Button android:id="@+id/umeng_example_update_btn_is_ignore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_is_ignore" />
