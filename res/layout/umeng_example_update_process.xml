                <Button android:id="@+id/umeng_example_update_btn_download_file" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_download_file" />
                <TextView android:textColor="#ff000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update_process_text9" />
                <Button android:id="@+id/umeng_example_update_btn_show_ui" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_show_ui" />
                <TextView android:textColor="#ff000000" android:id="@+id/update_tip_text" android:layout_width="wrap_content" android:layout_height="wrap_content" />
                <TextView android:textColor="#ffff0000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/start_download_code" />
                <Button android:id="@+id/umeng_example_update_btn_start_download" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_start_download" />
                <TextView android:textColor="#ffff0000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/start_install_code" />
                <Button android:id="@+id/umeng_example_update_btn_start_install" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_start_install" />
                <TextView android:textColor="#ffff0000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ignore_update_code" />
                <Button android:id="@+id/umeng_example_update_btn_ignore_update" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/btn_ignore_update" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>