<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@color/background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
            android:layout_alignParentTop="true"
            android:id="@+id/layout_top"
            layout="@layout/together_detail_top_bar" />

    <RelativeLayout
            android:layout_below="@id/layout_top"
            android:id="@+id/detail_commnet"
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip">

        <RelativeLayout
                android:id="@+id/rl_delete_myyueyou"
                android:visibility="gone"
                android:layout_width="25.0dip"
                android:layout_height="25.0dip"
                android:layout_marginTop="14.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_alignParentRight="true">

            <ImageView
                    android:background="@drawable/delete_myyueyou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
        </RelativeLayout>

        <ImageView
                android:id="@+id/iv_head_photo"
                android:layout_width="36.0dip"
                android:layout_height="36.0dip"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="7.0dip"
                android:src="@drawable/default_avatar" />

        <TextView
                android:textSize="16.0sp"
                android:textColor="#ff505050"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="8.0dip"
                android:text="四小美"
                android:singleLine="true"
                android:layout_toRightOf="@id/iv_head_photo" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64.0dip"
                android:layout_marginTop="3.0dip"
                android:layout_below="@id/tv_name">

            <TextView
                    android:textSize="10.0sp"
                    android:textColor="#ffb4b4b4"
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进行中"
                    android:layout_alignParentLeft="true" />

            <View
                    android:id="@+id/v_vertical1"
                    android:background="#ffb4b4b4"
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginTop="3.0dip"
                    android:layout_marginBottom="3.0dip" />

            <TextView
                    android:textSize="10.0sp"
                    android:textColor="#ffb4b4b4"
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5.0dip"
                    android:text="刚刚" />

        </LinearLayout>

        <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:id="@+id/ll_sexandage"
                android:background="@drawable/bg_sexandagetag"
                android:paddingLeft="3.0dip"
                android:paddingRight="3.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.0dip"
                android:layout_marginTop="11.0dip"
                android:layout_toRightOf="@id/tv_name">

            <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/iv_gender"
                    android:background="@drawable/icon_boy"
                    android:layout_width="10.0dip"
                    android:layout_height="10.0dip"
                    android:scaleType="fitCenter" />

            <TextView
                    android:textSize="10.0sp"
                    android:textColor="#ffffffff"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\ 26" />
        </LinearLayout>

        <TextView
                android:textSize="16.0sp"
                android:textColor="#ff666666"
                android:id="@+id/tv_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="7.0dip"
                android:layout_marginRight="10.0dip"
                android:text="\#想去西湖，求约伴1人#所提出的具体愿望或条件达到质量要求提出领土要求"
                android:layout_below="@id/iv_head_photo"
                android:lineSpacingExtra="6.0dip" />

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_below="@id/tv_introduce">

            <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/icon_dot" />

            <TextView
                    android:textSize="13.0sp"
                    android:textColor="#ff507daf"
                    android:id="@+id/tv_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目的地：北京-三亚-吉普岛"
                    android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="8.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_below="@id/ll_way">

            <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/icon_dot" />

            <TextView
                    android:textSize="13.0sp"
                    android:textColor="#ff507daf"
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我在：西单"
                    android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/ll_money_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.0dip"
                android:layout_marginTop="7.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_below="@id/ll_tag">

            <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/icon_dot" />

            <TextView
                    android:textSize="13.0sp"
                    android:textColor="#ff507daf"
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出发时间: 2016.5.15 10:00"
                    android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_img"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="12.0dip"
                android:layout_below="@id/ll_money_intro"
                android:layout_alignLeft="@id/tv_introduce" />

    </RelativeLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/detail_commnet"
            android:layout_above="@+id/linearLayout"
            android:background="#ffffffff">

        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_all"
                android:background="#ffffffff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <View
                    android:background="#ffe6e6e6"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:background="#ffe6e6e6"
                    android:layout_width="fill_parent"
                    android:layout_height="36.0dip">

                <RelativeLayout
                        android:orientation="vertical"
                        android:background="#ffffffff"
                        android:id="@+id/layout_comment_count"
                        android:layout_width="68.0dip"
                        android:layout_height="fill_parent">

                    <TextView
                            android:textSize="12.0sp"
                            android:textColor="#ff969696"
                            android:id="@+id/tv_comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评论"
                            android:layout_centerInParent="true" />
                </RelativeLayout>

                <RelativeLayout
                        android:orientation="vertical"
                        android:id="@+id/layout_joined"
                        android:layout_width="68.0dip"
                        android:layout_height="fill_parent">

                    <TextView
                            android:textSize="12.0sp"
                            android:textColor="#ff969696"
                            android:id="@+id/tv_joined"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="入伙"
                            android:layout_centerInParent="true" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <ListView
                android:id="@+id/listview"
                android:divider="@null"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        </ListView>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:background="#00000000"
            android:layout_width="fill_parent"
            android:layout_height="53.0dip"
            android:layout_alignParentBottom="true"
            android:id="@+id/linearLayout">

        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_menu"
                android:background="#ffffffff"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip">

            <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/layout_comment"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">

                <ImageView
                        android:background="@drawable/icon_detail_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter" />

                <TextView
                        android:textSize="10.0sp"
                        android:textColor="#ff696c71"
                        android:id="@+id/tv_com_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5.0dip"
                        android:text="\ 0" />
            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/layout_chat"
                    android:background="#ffffbe00"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_chat_group"
                        android:scaleType="fitCenter" />

                <TextView
                        android:textSize="20.0sp"
                        android:textColor="#ffffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:text="聊天" />
            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/layout_join"
                    android:background="#ffff6200"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="2.0">

                <TextView
                        android:textSize="20.0sp"
                        android:textColor="#ffffffff"
                        android:id="@+id/tv_join"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8.0dip"
                        android:text="入伙" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>