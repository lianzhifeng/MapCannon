<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff1f3f6" >

    <include
        android:id="@+id/layout_top"
        layout="@layout/top_bar" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="36.0dip"
        android:background="@drawable/bg_input_find_password_item" >

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00000000"
            android:hint="你本人的手机号"
            android:paddingLeft="10.0dip"
            android:textColorHint="#ffbfbfbf"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="fill_parent"
            android:layout_height="24.0dip"
            android:layout_below="@id/et_tel"
            android:background="#5000ce00"
            android:gravity="center|left"
            android:paddingLeft="10.0dip"
            android:text="为了安全，我们会向你手机发送短信验证码"
            android:textColor="#ffffffff"
            android:textSize="12.0dip"
            android:visibility="gone" />

        <View
            android:id="@+id/v_line1"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/et_tel"
            android:background="#ffbfbfbf" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_below="@id/v_line1"
            android:background="#00000000"
            android:hint="密码"
            android:inputType="textPassword"
            android:maxLength="32"
            android:paddingLeft="10.0dip"
            android:textColorHint="#ffbfbfbf"
            android:textSize="14.0sp" />

        <View
            android:id="@+id/v_line2"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/et_password"
            android:background="#ffbfbfbf" />

        <EditText
            android:id="@+id/et_password_re"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:layout_below="@id/v_line2"
            android:background="#00000000"
            android:hint="重复密码"
            android:inputType="textPassword"
            android:maxLength="32"
            android:paddingLeft="10.0dip"
            android:textColorHint="#ffbfbfbf"
            android:textSize="14.0sp" />
    </RelativeLayout>

</RelativeLayout>