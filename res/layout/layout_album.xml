<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center_vertical" android:layout_width="fill_parent" android:layout_height="@dimen/albumitem_height"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/layout_left_la" android:layout_width="@dimen/albumitem_content_height" android:layout_height="@dimen/albumitem_content_height" android:layout_centerVertical="true">
        <ImageView android:background="@drawable/bg_album_border" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="fitCenter" />
        <ImageView android:id="@+id/iv_album_la" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginRight="5.0dip" android:layout_marginBottom="5.0dip" android:scaleType="centerCrop" />
    </RelativeLayout>
    <RelativeLayout android:gravity="center_vertical" android:paddingLeft="5.0dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_toRightOf="@id/layout_left_la" android:layout_centerVertical="true">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="17.0sp" android:textColor="@android:color/black" android:id="@+id/tv_name_la" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:textSize="13.0sp" android:id="@+id/tv_count_la" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView android:id="@+id/iv_index_la" android:layout_width="@dimen/albumitem_image_height" android:layout_height="@dimen/albumitem_image_height" android:src="@drawable/ic_choice_green" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
    </RelativeLayout>
</RelativeLayout>