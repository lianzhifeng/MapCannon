<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@android:color/white"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
