<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@drawable/bg_local_header"
        android:layout_width="fill_parent"
        android:layout_height="295.0dip"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:textSize="16.0sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27.0dip"
            android:text="超过1.000.000家酒店供您选择"
            android:layout_centerHorizontal="true" />

    <RelativeLayout
            android:id="@+id/rl_destination"
            android:background="@drawable/bg_local_transparent"
            android:layout_width="fill_parent"
            android:layout_height="34.0dip"
            android:layout_marginLeft="28.0dip"
            android:layout_marginTop="68.0dip"
            android:layout_marginRight="28.0dip">

        <TextView
                android:textSize="14.0sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/tv_mine_location"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="8.0dip"
                android:hint="位置"
                android:singleLine="true"
                android:maxLength="4"
                android:layout_alignParentRight="true" />

        <ImageView
                android:id="@+id/iv_mine_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="4.0dip"
                android:src="@drawable/icon_local_mine"
                android:scaleType="fitCenter"
                android:layout_toLeftOf="@id/tv_mine_location"
                android:layout_centerVertical="true" />

        <View
                android:id="@+id/line"
                android:background="#ff999999"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="8.0dip"
                android:layout_toLeftOf="@id/iv_mine_location" />

        <ImageView
                android:id="@+id/iv_select_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11.0dip"
                android:src="@drawable/icon_select_destination"
                android:scaleType="fitCenter"
                android:layout_toLeftOf="@id/line"
                android:layout_centerVertical="true" />

        <EditText
                android:textSize="14.0sp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/tv_select_destination"
                android:background="@null"
                android:paddingLeft="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:hint="关键字"
                android:layout_toLeftOf="@id/iv_select_destination"
                android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_date"
            android:background="@drawable/bg_local_transparent"
            android:layout_width="fill_parent"
            android:layout_height="93.0dip"
            android:layout_marginLeft="28.0dip"
            android:layout_marginTop="13.0dip"
            android:layout_marginRight="28.0dip"
            android:layout_below="@id/rl_destination">

        <TextView
                android:textSize="12.0sp"
                android:textColor="@color/white"
                android:id="@+id/tv_count"
                android:background="@drawable/bg_local_transparent_circular"
                android:paddingLeft="15.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="15.0dip"
                android:paddingBottom="5.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1晚"
                android:layout_centerInParent="true" />

        <View
                android:id="@+id/reference"
                android:layout_width="1.0dip"
                android:layout_height="1.0dip"
                android:layout_centerInParent="true" />

        <RelativeLayout
                android:id="@+id/rl_in_date"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/reference"
                android:layout_alignParentLeft="true">

            <TextView
                    android:textSize="14.0sp"
                    android:textColor="#ffff6200"
                    android:id="@+id/tv_in_date_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.0dip"
                    android:text="入住日期"
                    android:layout_centerHorizontal="true" />

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_in_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周一"
                    android:layout_centerInParent="true" />

            <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_in_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="2015-10-12"
                    android:drawableRight="@drawable/icon_select_destination"
                    android:drawablePadding="5.0dip"
                    android:layout_below="@id/tv_in_week"
                    android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_out_date"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toRightOf="@id/reference"
                android:layout_alignParentRight="true">

            <TextView
                    android:textSize="14.0sp"
                    android:textColor="#ffff6200"
                    android:id="@+id/tv_out_date_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13.0dip"
                    android:text="离开日期"
                    android:layout_centerHorizontal="true" />

            <TextView
                    android:textSize="16.0sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_out_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周二"
                    android:layout_centerInParent="true" />

            <TextView
                    android:textSize="14.0sp"
                    android:textColor="@color/white"
                    android:id="@+id/tv_out_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.0dip"
                    android:text="2015-10-13"
                    android:drawableRight="@drawable/icon_select_destination"
                    android:drawablePadding="5.0dip"
                    android:layout_below="@id/tv_out_week"
                    android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rl_search"
            android:background="@drawable/bg_btn_add"
            android:layout_width="fill_parent"
            android:layout_height="34.0dip"
            android:layout_marginLeft="28.0dip"
            android:layout_marginTop="13.0dip"
            android:layout_marginRight="28.0dip"
            android:layout_below="@id/rl_date">

        <TextView
                android:textSize="14.0sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查找酒店"
                android:drawableLeft="@drawable/icon_local_search"
                android:drawablePadding="6.0dip"
                android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>