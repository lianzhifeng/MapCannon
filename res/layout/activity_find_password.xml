<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff1f3f6"
    android:orientation="vertical" >

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:id="@+id/layout_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:layout_marginBottom="20.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/bg_input_login"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/bg_input_login_item"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="30.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="+86"
                android:textColor="#ffb4b4b4"
                android:textSize="12.0sp" />

            <ImageView
                android:layout_width="1.0px"
                android:layout_height="15.0dip"
                android:layout_gravity="center_vertical"
                android:background="#ffdcdcdc" />

            <EditText
                android:id="@+id/et_tel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:background="#fff1f1f1"
                android:hint="请输入您的手机号"
                android:inputType="number"
                android:textColorHint="#ffb4b4b4"
                android:textSize="12.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/bg_input_login_item"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7.5dip"
                android:layout_marginRight="7.5dip"
                android:background="@drawable/icon_password"
                android:gravity="center"
                android:textColor="#ffb4b4b4"
                android:textSize="12.0sp" />

            <ImageView
                android:layout_width="1.0px"
                android:layout_height="15.0dip"
                android:layout_gravity="center_vertical"
                android:background="#ffdcdcdc" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:background="#fff1f1f1"
                android:digits="1234567890abcdefghijklmnopqrstuvwxyz"
                android:hint="6-32位新密码"
                android:inputType="textPassword"
                android:maxLength="32"
                android:textColorHint="#ffb4b4b4"
                android:textSize="12.0sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip" >

            <EditText
                android:id="@+id/et_validate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="80.0dip"
                android:background="@drawable/bg_input_login_item"
                android:digits="1234567890abcdefghijklmnopqrstuvwxyz"
                android:hint="请填写验证码"
                android:inputType="text"
                android:maxLength="6"
                android:paddingLeft="10.0dip"
                android:textColorHint="#ffb4b4b4"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/tv_send_validate"
                android:layout_width="70.0dip"
                android:layout_height="30.0dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_btn_send_validate"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="#ffffffff"
                android:textSize="12.0sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="20.0dip"
            android:text="如果未收到，请再次点击发送验证码"
            android:textColor="#ffb3b3b3"
            android:textSize="12.0sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_below="@id/layout_input"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@drawable/bg_input_login_btn"
        android:text="下一步"
        android:textColor="#ffffffff" />

</LinearLayout>