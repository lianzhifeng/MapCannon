<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:textSize="17.0sp"
            android:textColor="#ff646464"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="49.0dip"
            android:text="消息中心" />

    <View
            android:background="#ffb4b4b4"
            android:layout_width="fill_parent"
            android:layout_height="1.0px" />

    <ScrollView
            android:background="@color/white"
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout_like"
                    android:layout_width="fill_parent"
                    android:layout_height="70.0dip">

                <RelativeLayout
                        android:layout_width="70.0dip"
                        android:layout_height="70.0dip">

                    <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:layout_margin="10.0dip"
                            android:src="@drawable/icon_like2_msg" />

                    <TextView
                            android:textColor="#ffffffff"
                            android:gravity="center"
                            android:id="@+id/iv_like_count"
                            android:background="@drawable/icon_msg_dot"
                            android:visibility="gone"
                            android:layout_width="20.0dip"
                            android:layout_height="20.0dip"
                            android:layout_margin="7.0dip"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="70.0dip">

                    <TextView
                            android:textSize="16.0sp"
                            android:textColor="#ff646464"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.0dip"
                            android:text="消息提醒"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true" />

                    <TextView
                            android:textSize="12.0sp"
                            android:textColor="#ffb4b4b4"
                            android:ellipsize="end"
                            android:id="@+id/tv_like_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:singleLine="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true" />

                    <TextView
                            android:textSize="10.0sp"
                            android:textColor="#ffb4b4b4"
                            android:id="@+id/tv_like_date"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10.0dip"
                            android:src="@drawable/icon_msg_next"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>

            <View
                    android:background="#ffb4b4b4"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="70.0dip" />

            <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/layout_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="70.0dip">

                <RelativeLayout
                        android:layout_width="70.0dip"
                        android:layout_height="70.0dip">

                    <ImageView
                            android:layout_width="50.0dip"
                            android:layout_height="50.0dip"
                            android:layout_margin="10.0dip"
                            android:src="@drawable/icon_comment_msg" />

                    <TextView
                            android:textColor="#ffffffff"
                            android:gravity="center"
                            android:id="@+id/iv_comment_count"
                            android:background="@drawable/icon_msg_dot"
                            android:visibility="gone"
                            android:layout_width="20.0dip"
                            android:layout_height="20.0dip"
                            android:layout_margin="7.0dip"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true" />
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="70.0dip">

                    <TextView
                            android:textSize="16.0sp"
                            android:textColor="#ff646464"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.0dip"
                            android:text="评论提醒"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true" />

                    <TextView
                            android:textSize="12.0sp"
                            android:textColor="#ffb4b4b4"
                            android:ellipsize="end"
                            android:id="@+id/tv_comment_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:singleLine="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true" />

                    <TextView
                            android:textSize="10.0sp"
                            android:textColor="#ffb4b4b4"
                            android:id="@+id/tv_comment_date"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20.0dip"
                            android:layout_marginRight="10.0dip"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true" />

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10.0dip"
                            android:src="@drawable/icon_msg_next"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                </RelativeLayout>
            </LinearLayout>

            <View
                    android:background="#ffb4b4b4"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="70.0dip" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>