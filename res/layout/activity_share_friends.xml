<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/background" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include android:id="@+id/layout_top_bar" layout="@layout/top_bar" />
    <RelativeLayout android:id="@+id/rl_empty_tip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/layout_top_bar">
        <ImageView android:id="@+id/iv_empty" android:background="@drawable/icon_empty_fans" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="fitCenter" android:layout_centerInParent="true" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView android:id="@+id/rv_friends" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/layout_top_bar" />
</RelativeLayout>